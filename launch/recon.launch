<launch>
    <node pkg="tf" type="static_transform_publisher" name="camera_link_broadcaster" args="0 0 0 0 -0.7071068 0 0.7071068 tcp camera_link 100" />
    <node type="rviz" name="rviz" pkg="rviz" args="-d $(find ros_osv)/rviz/osv_recon.rviz" />
    <node name="osv" pkg="ros_osv" type="osv_recon.py" output="screen" />
    <!-- Realsense -->
    <include file="$(find realsense2_camera)/launch/rs_rgbd.launch">
        <!-- <arg name="enable_pointcloud" value="false" /> -->
        <!-- <arg name="ordered_pc" value="true" /> -->
        <!-- <arg name="filters" value="pointcloud" /> -->
        <!-- <arg name="clip_distance" value="0.5" /> -->
        <arg name='enable_depth' value='true' />
    </include>
    <!-- Reconstruction -->
    <include file="$(find industrial_reconstruction)/launch/reconstruction.launch">
        <arg name="depth_image_topic" value="/camera/depth/image_rect_raw" />
        <arg name="color_image_topic" value="/camera/color/image_raw" />
        <arg name="camera_info_topic" value="/camera/color/camera_info" />
    </include>
</launch>